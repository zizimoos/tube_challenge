header.header
    div.header__column
        a(href=routes.home) 
            i.fab.fa-youtube 
    div.header__column
        form(action=routes.search, method="get")
            input(type="text", placeholder="search by terms ...", name="term")       
    div.header__column 
        ul 
            if user.isAuthenticated
                li
                    a(href=routes.join) Join 
                li
                    a(href=routes.login) Login 
            else
                li
                    a(href=routes.userDetail(user.id)) Profile
                li
                    a(href=`/video${routes.upload}`) Upload
                li
                    a(href=`/users${routes.editProfile}`) EditProfile
                li
                    a(href=routes.videoDetail(user.id)) Video detail
                li
                    a(href=`/video${routes.editVideo}`) Edit Video