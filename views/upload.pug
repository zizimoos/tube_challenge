extends layouts/main

block content
    div.form__container
            form(action=`/video${routes.upload}` method="post" enctype="multipart/form-data")
                div.fileUpload
                    label(for="avatar") YouTube URL
                    input(type="url", id="UTurl", name="UTurl", placeholder="write youtube url", required=true)
                div.fileUpload
                    label(for="file") Video File
                    input(type="file", id="file", name="videoFile", required=true, accept="video/*")
                input(type="text", placeholder="Title", name="title", required=true)
                textarea(name="description", placeholder="Description", required=true)
                input(type="submit", value="Upload Video")