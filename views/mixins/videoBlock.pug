mixin videoBlock(video={})
    div.videoBlock    
        a(href=routes.videoDetail(video.id))
            iframe(src=video.videoFile  frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
            //- iframe(src=video.videoFile width="640" height="380" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
            //- video.videoBlock__thumbnail(src=video.videoFile, controls=true, width="600")
            h4.videoBlock__title= video.title
            if video.views ===1
                h6.videoBlock__views 1 view
            else 
                h6.videoBlock__views  #{video.views} views
            //- h6.videoBlock__id= `video ID : ${video.id}`